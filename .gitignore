# Ignore directories generated by Composer
/drush/contrib/
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/

# Ignore sensitive information
/web/sites/*/settings.php
/web/sites/*/settings.local.php
/drush/local/drush.yml

# Ignore Drupal's file directory
/web/sites/*/files/

# Ignore private files (though the folder must pre-exist).
/private
!/private/.gitkeep

# Ignore files Drupal automatically generates.
/config/README.txt
/config/splits/*/.htaccess
/config/excluded/*
!/config/excluded/.gitkeep
/config/sync/.htaccess

# Ignore SimpleTest multi-site environment.
/web/sites/simpletest

# Ignore OS specific temporary files.
.DS_Store*
ehthumbs.db
Thumbs.db

# Ignore files generated by IDEs.
/.buildpath
/.idea/
/.vscode/
/.project
/.settings
/*.esproj
/*.komodoproject
/*.komodotools
/nbproject

# Ignore files generated by Docker.
/docker-runtime
/mariadb-init
/.docker-sync

# Ignore database dumps and archives.
*.sql
*.gz
*.xz

# Ignore files generated by build tools.
.sass-cache
node_modules
npm-debug.log

# Ignore .env files as they are personal
/.env

# Ignore Lando assets
/lando_assets/*
!/lando_assets/.gitkeep
